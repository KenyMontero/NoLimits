@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_LayoutLimits.cshtml";
}

<div class="content" style="margin-bottom: 29px; ">
    <div class="row">
        <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5 w-25 content2" style="height: 250px;">
            <img src="~/Content/Go/imagen/Go.png" style="margin-top: 0px;" class="" height="250" alt="cemexgo">
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7 content3" style="padding: 0px;">
            <img src="~/Content/Go/imagen/desarrollo.jpg" width="1100" class="img-fluid" style="height: 230px;" alt="cemexgo">
        </div>
    </div>
    <div class="container">
        <div class="">
            <div class="mb-3">
                <ul class="steps">
                    <li class="step step-success">
                        <a href="Build">
                            <div class="step-content">
                                <span class="step-circle">1</span>
                                <span class="step-text">Build</span>
                            </div>
                        </a>
                    </li>
                    <li class="step">
                        <a href="Design">
                            <div class="step-content">
                                <span class="step-circle">2</span>
                                <span class="step-text">Design</span>
                            </div>
                        </a>
                    </li>
                    <li class="step step-active">
                        <a href="Detail">
                            <div class="step-content">
                                <span class="step-circle">3</span>
                                <span class="step-text">Details</span>
                            </div>
                        </a>
                    </li>
                    <li class="step">
                        <a href="ejecution">
                            <div class="step-content">
                                <span class="step-circle">4</span>
                                <span class="step-text">Execution Plan</span>
                            </div>
                        </a>
                    </li>
                    <li class="step">
                        <a href="Marketplace">
                            <div class="step-content">
                                <span class="step-circle">5</span>
                                <span class="step-text" style="width: 90px">Marketplace</span>
                            </div>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h1 class="text-center"
            style="letter-spacing: -2px; color:#00205C; padding-bottom: 20px; padding-top: 20PX; font-weight: 700;">
            Internal details of the selected model
        </h1>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-md-4" style="margin-left: 116px;">
                <div class="content-box">
                   
                    <!-- 3D Viewer -->
                    <div class="row">
                        <div class="col-md-12">
                            <label>3D Design</label>
                            <div id="viewer">



                                <div id="camera-controls">
                                    <a href="#" class="btn btn-default bottom" id="zoom-out">
                                        <span class="glyphicon glyphicon-zoom-out"></span>
                                    </a>
                                    <a href="#" class="btn btn-default bottom" id="reset-view">
                                        <span class="glyphicon glyphicon glyphicon-home"></span>
                                    </a>
                                    <a href="#" class="btn btn-default bottom" id="zoom-in">
                                        <span class="glyphicon glyphicon-zoom-in"></span>
                                    </a>

                                    <span>&nbsp;</span>

                                    <a class="btn btn-default bottom" href="#" id="move-left">
                                        <span class="glyphicon glyphicon-arrow-left"></span>
                                    </a>
                                    <span class="btn-group-vertical">
                                        <a class="btn btn-default" href="#" id="move-up">
                                            <span class="glyphicon glyphicon-arrow-up"></span>
                                        </a>
                                        <a class="btn btn-default" href="#" id="move-down">
                                            <span class="glyphicon glyphicon-arrow-down"></span>
                                        </a>
                                    </span>
                                    <a class="btn btn-default bottom" href="#" id="move-right">
                                        <span class="glyphicon glyphicon-arrow-right"></span>
                                    </a>
                                </div>

                                <div id="loading-modal">
                                    <h1>Loading...</h1>
                                </div>
                            </div>

                            <!-- 2D Floorplanner -->
                            <div id="floorplanner">
                                <canvas id="floorplanner-canvas"></canvas>
                                <div id="floorplanner-controls">

                                    <button id="move" class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-move"></span>
                                        Move Walls
                                    </button>
                                    <button id="draw" class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-pencil"></span>
                                        Draw Walls
                                    </button>
                                    <button id="delete" class="btn btn-sm btn-default">
                                        <span class="glyphicon glyphicon-remove"></span>
                                        Delete Walls
                                    </button>
                                    <span class="pull-right">
                                        <button class="btn btn-primary btn-sm" id="update-floorplan">Done &raquo;</button>
                                    </span>

                                </div>
                                <div id="draw-walls-hint">
                                    Press the "Esc" key to stop drawing walls
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-12">
                            <label>2D Design</label>
                            <img src="~/Content/Go/imagen/perfect-work-home-designing-on-autocad-2d-and-3d.png" style="width: 393px;" />
                        </div>
                    </div>
                  
                </div>
            </div>
            <div class="col-md-4">
                <div class="content-box">
                    <div class="col-md-6">
                        <img src="~/Content/Go/imagen/Imagen4.jpg" style="padding-top: 13px;width: 540px;" class="" alt="cemexgo">
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-right">
                        <a href="Budget" class="button2 text-center rounded" style="margin-top: 3%;">Next</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
   <script src="~/Content/example/js/three.min.js"></script>
    <script src="~/Content/example/js/blueprint3d.js"></script>



    <script src="~/Content/example/js/items.js"></script>
    <script src="~/Content/example/js/example.js"></script>


}